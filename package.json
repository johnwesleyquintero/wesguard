{
  "name": "wesguard",
  "version": "1.1.0",
  "private": true,
  "description": "A modern, lightweight, and powerful PC optimization tool built with Electron and React.",
  "author": "John Wesley Quintero",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && copy preload.cjs dist-electron\\ && electron-builder",
    "build:electron": "tsc && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "check": "node scripts/code-checker.mjs",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\""
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/winreg": "^1.2.33",
    "chart.js": "^4.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.7.0",
    "react-window": "^1.8.11",
    "systeminformation": "^5.21.22",
    "tailwind-merge": "^3.3.1",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/react-test-renderer": "^18.3.1",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.3",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^30.0.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react-test-renderer": "^18.3.1",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.0",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.scalesmart.wesguard",
    "productName": "WesGuard",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
